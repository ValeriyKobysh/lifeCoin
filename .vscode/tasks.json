{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "dev",
            "isBuildCommand": true,
            "showOutput": "always",
            "isBackground": true,
            "args": [
                "run","dev"
            ]
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "showOutput": "always",
            "isBackground": true,
            "args": [
                "build"
            ]
        }
    ]
}